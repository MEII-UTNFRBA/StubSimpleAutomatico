#:kivy 1.0
#:import Factory kivy.factory.Factory

<PuntoEnGrafico>:
    size: 7, 7
    canvas:
        Color:
            rgba: (0,1,0,1)
        Ellipse:
            pos: self.pos
            size: self.size

<Main>:
    punto: punto_graf                                   # Para agregar el punto al Smith

########################################################################################################################
### Fondo de pantalla, titulos e imagenes ##############################################################################
########################################################################################################################

# Para setear el color de fondo
    canvas:
        Color:
            rgb: (0.2, 0.2, 0.2)
        Rectangle:
            pos: self.pos
            size: self.size

# Titulo superior
    BoxLayout:
        size_hint: (None,None)
        size: (600,60)
        pos_hint: {'center_x':0.43, 'center_y':0.95}
        Label:
            size: self.size
            text: "STUB SIMPLE AUTOMATICO"
            text_size: self.size
            font_size: 40
            color: 1,1,1,1
            bold: True
            background_color:

# Imagen de logo de UTN
    BoxLayout:
        size_hint: (None, None)
        size: (200,50)
        pos_hint: {'center_x':0.867, 'center_y':0.935}
        AsyncImage:
            size: self.texture_size
            source: './Img/UTN_Logo.png'
#            allow_stretch: True

# Dibujo del diagrama de smith
    BoxLayout:
        id: smith
        size_hint: (None,None)
        size: (300,300)
        pos_hint: {'center_x':0.8, 'center_y':0.27}
        AsyncImage:
            id:smith_img
#            opacity: 1
            size: self.texture_size
            source: './Img/smith_chart_test.png'
            allow_stretch: True
            PuntoEnGrafico:
                id: punto_graf
                center: self.parent.center

